{% extends "::materialize_card_info.html.twig" %}
    {% block card_title %}
        <div class="center">linePaths</div>
    {% endblock card_title %}
{% block card_content %}
    {% if linePaths | length==0 %}
        {% if is_granted('ROLE_ADMIN') %}
            <div class="right">
                <a class="btn-floating" href="{{ path('linePath_create') }}"><i
                            class="material-icons">add</i></a>
            </div>
        {% endif %}
        <h1>There is no Line Path here !</h1>
    {% else %}
        <table class="striped responsive-table">
            <thead>
            <tr>
                <th>Line</th>
                <th>Way</th>
                <th>Date Start</th>
                <th>Date End</th>
            </tr>
            </thead>
            <tbody>
            {% for linePath in linePaths %}
                <tr>
                    <td>
                        {{ linePath.line.label }}
                    </td>
                    <td>
                        {{ linePath.way }}
                    </td>
                    <td>
                        {{ linePath.dateStart |date("m/d/Y") }}
                    </td>
                    <td>
                        {{ linePath.dateEnd  |date("m/d/Y") }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock card_content %}