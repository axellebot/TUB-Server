{% extends  '::card_action.html.twig' %}
{% block card_title %}
    <div class="center">Create Stop</div>{% endblock %}
{% block card_content %}
    <div class="row">
        <form class="col s12" id="create_stop_form" method="post" action="{{ path('stop_create') }}">
            {{ form_widget(form._token) }}
            <div class="input-field col s12">
                {{ form_label(form.label) }}
                {{ form_widget(form.label) }}
            </div>

            <div class="input-field col s12">
                {{ form_label(form.latitude) }}
                {{ form_widget(form.latitude) }}
            </div>
            <div class="input-field col s12">
                {{ form_label(form.longitude) }}
                {{ form_widget(form.longitude) }}
            </div>
        </form>
    </div>
{% endblock card_content %}
{% block card_action %}
    <button class="btn" type="submit" form="create_stop_form">Create</button>
{% endblock card_action %}