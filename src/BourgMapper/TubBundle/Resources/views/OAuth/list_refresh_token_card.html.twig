{% extends "::materialize_card_info.html.twig" %}
    {% block card_title %}
        <div class="center">Refresh Tokens</div>{% endblock card_title %}
{% block card_content %}
    {% if refreshTokens | length==0 %}
        <h1>There is no Refresh Token here !</h1>
    {% else %}
        <table class="striped responsive-table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Client</th>
                <th>User</th>
            </tr>
            </thead>
            <tbody>
            {% for refreshToken in refreshTokens %}
                <tr>
                    <td>{{ refreshToken.id }}</td>
                    <td>
                        {{ refreshToken.client.label }}
                    </td>
                    <td>
                        {{ refreshToken.user.username }}<br/>
                        {{ refreshToken.user.email }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock card_content %}