{% extends "::card_info.html.twig" %}
    {% block card_title %}
        <div class="center">Codes</div>{% endblock card_title %}
{% block card_content %}
    {% if authCodes | length==0 %}
        <h1>There is no Codes here !</h1>
    {% else %}
        <table class="striped responsive-table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Client</th>
                <th>User</th>
            </tr>
            </thead>
            <tbody>
            {% for authCode in authCodes %}
                <tr>
                    <td>{{ authCode.id }}</td>
                    <td>
                        {{ authCode.client.label }}
                    </td>
                    <td>
                        {{ authCode.user.username }}<br/>
                        {{ authCode.user.email }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock card_content %}