{% extends "::card_info.html.twig" %}
    {% block card_title %}
        <div class="center">Refresh Tokens</div>{% endblock card_title %}
{% block card_content %}
    {% if accessTokens | length==0 %}
        <h1>There is no Access Token here !</h1>
    {% else %}
        <table class="striped responsive-table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Client</th>
                <th>User</th>
            </tr>
            </thead>
            <tbody>
            {% for accessToken in accessTokens %}
                <tr>
                    <td>{{ accessToken.id }}</td>
                    <td>
                        {{ accessToken.client.label }}
                    </td>
                    <td>
                        {{ accessToken.user.username }}<br/>
                        {{ accessToken.user.email }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock card_content %}