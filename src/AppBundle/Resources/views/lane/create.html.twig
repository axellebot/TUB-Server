{% extends 'AppBundle::navBase.html.twig' %}
{% block title %}Create Lane{% endblock %}

{% block pageContent %}
    <div class="mdl-grid" ng-app="myApp">
        <div class="mdl-cell mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--4-col-phone mdl-cell--4-offset mdl-cell--2-offset-tablet">
            <div class="mdl-card mdl-shadow--6dp">
                <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                    <h2 class="mdl-card__title-text">Form</h2>
                </div>
                <div class="mdl-card__supporting-text">

                    <form id="lane_create_form" method="post">
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            <input id="name" name="_name" class="mdl-textfield__input" type="text" required/>
                            <label class="mdl-textfield__label" for="name">Name</label>
                        </div>
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            <input id="color" name="_color" class="mdl-textfield__input jscolor" type="text" value="#fff" required/>
                            <label class="mdl-textfield__label" for="color">Color</label>
                        </div>
                    </form>
                </div>
                <div class="mdl-card__actions mdl-card--border">
                    <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" type="submit"
                            form="lane_create_form" formaction="{{ path('lane_create_check') }}">
                        Create
                    </button>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
{% javascripts '@AppBundle/Resources/public/js/jscolor.min.js' %}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}