{% extends 'AppBundle::navBase.html.twig' %}
{% block title %}Create Lane{% endblock %}

{% block pageContent %}
    <div class="mdl-grid" ng-app="myApp">
        <div class="mdl-cell mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--4-col-phone mdl-cell--4-offset mdl-cell--2-offset-tablet">
            <div class="mdl-card mdl-shadow--6dp">
                <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                    <h2 class="mdl-card__title-text">Form</h2>
                </div>
                {{ form_start(form) }}

                <div class="mdl-card__supporting-text">

                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        {{ form_label(form.name)}}
                        {{ form_widget(form.name) }}
                    </div>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        {{ form_label(form.color)}}
                        {{ form_widget(form.color) }}
                    </div>
                </div>
                <div class="mdl-card__actions mdl-card--border">
                    {{ form_widget(form.save) }}
                </div>
                {{ form_end(form) }}

            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    {% javascripts '@AppBundle/Resources/public/js/jscolor.min.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}