<div class="mdl-cell mdl-card mdl-shadow--6dp mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--4-col-phone mdl-cell--4-offset mdl-cell--2-offset-tablet">
    <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
        <h2 class="mdl-card__title-text">{% block card_title %}{% endblock %}</h2>
    </div>
    <div class="mdl-card__supporting-text">
        {% block card_content %}{% endblock %}
    </div>
    <div class="mdl-card__actions mdl-card--border">
        {% block card_border %}{% endblock %}
    </div>
</div>